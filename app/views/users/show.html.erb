

<% if flash[:create]%>
   <p class="flash-txt"><%= flash[:create] %></p>
  <% end %>

<% if flash[:update]%>
   <p class="flash-txt"><%= flash[:update] %></p>
  <% end %>

<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>


<% if @user.errors.any? %>
  <div class="error-box">
   <p class=" error-title">2 errors prohibited this book from being saved:</p>
   <ul>
     <li>Name can't be blank</li>
     <li>Name is too short (minimum is 2 characters)</li>
   </ul>
   </div>
 <% end %>

<%= render"users/list",user:current_user,book:@book %>


<div class='col-xs-9'>
    <h2>Books</h2>
<table class="table table-striped">
	<tr><td></td><td>Title</td><td>Opinion</td></tr>
	<% @books.each do |book| %>
	<tr><td><%= attachment_image_tag @user, :profile_image, :fill,50,50,format:"jpeg",fallback: "no_image.jpg"  %></td>
		<td><%= link_to (book.title),book_path(book.id) %></td>
		<td><%= book.body %></td></tr>
	<% end %>
</table>
</div>



