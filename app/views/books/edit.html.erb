
<% if @book.errors.any? %>
   <p class=" error-title">2 errors prohibited this book from being saved:</p>
   <ul>
     <li>book can't be blank</li>
     <li>title is too short (minimum is 2 characters)</li>
   </ul>
 <% end %>


<h2>Editing Book</h2><br><br>

<%= form_for(@book) do |f| %>

<p>title</p>
<%= f.text_field :title %>

<p>body</p>
<%= f.text_area :body %><br>

<%= f.submit 'Update Book' %>
<% end %>

<%= link_to "Show" ,book_path(@book.id)%>
<%= link_to "Back" ,books_path %>