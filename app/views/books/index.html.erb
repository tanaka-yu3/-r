
	<div class="container">
      <div class="row">
      	<%= render "book/list",user:@user ,book:@book %>
      	<div class="col-lg-8">

      		<% if flash[:create]%>
      		<p class="flash-txt"><%= flash[:create] %></p>
      		<% end %>

			<h2>Books</h2>
			<table class="table table-striped">
			<tr><th>title</th><th>opinion</th></tr>

			<% @books.each do |book| %>
			<tr>
			<th><%= book.title %><%= limk_to "titile",book_path%></th>
			<th><%= book.body %></th>
			</tr>
			<% end %>
			</table>
		</div>
		</div>
	</div>