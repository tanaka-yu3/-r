
<% if @book.errors.any? %>
   <p class=" error-title">2 errors prohibited this book from being saved:</p>
   <ul>
     <li>book can't be blank</li>
     <li>title is too short (minimum is 2 characters)</li>
   </ul>
 <% end %>

<%= flash[:notice] %>

<%= render"/users/list",user: current_user ,book:@book %>

<div class='col-xs-9'>
    <h2>Books</h2>
 <table class='table table-hover table-inverse'>
	<tr><td></td><td>Title</td><td>Opinion</td><td></td></tr>
	<% @books.each do |book| %>
	<tr>
		<td><%= link_to attachment_image_tag(book.user, :profile_image, :fill,40,40,format:"jpeg",fallback: "no_image.jpg"),user_path(book.user.id)  %></td>
		<td><%= link_to (book.title), book_path(book.id)%></td>
		<td><%= book.body %></td>
	</tr>
	<% end %>
</table>
</div>